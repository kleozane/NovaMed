@model List<NovaMed.Data.Doctor>
@{
    ViewData["Title"] = "Doctors";
}

<a asp-action="Create" class="btn btn-success mb-3">Shto Doktor</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doctor in Model)
        {
            <tr>
                <td>@doctor.Id</td>
                <td>@doctor.FirstName</td>
                <td>@doctor.LastName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@doctor.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@doctor.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
